{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "app.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run copyFiles",
    "copyFiles": "copyfiles package.json dist/backend/api && copyfiles -u 1 staticdata/* dist/backend/api/staticdata && copyfiles -u 1 src/certs/* dist/backend/api/src && copyfiles -u 1 -a -e '**/*.ts' src/database/* dist/backend/api/src/ && copyfiles -a -u 2 src/database/.env dist/backend/api/src/database && copyfiles -a environment/* dist/backend/api/",
    "startApi": "nodemon ./src/server.ts",
    "startCronjob": "nodemon ./src/shared/utils/cron-job.ts",
    "generateDB": "npx prisma generate --schema ./src/database/schema.prisma",
    "updateDB": "npx prisma db push --schema ./src/database/schema.prisma",
    "resetDB": "npx prisma migrate reset --skip-generate --schema ./src/database/schema.prisma",
    "startStudio": "npx prisma studio --schema ./src/database/schema.prisma"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@node-saml/passport-saml": "^5.1.0",
    "@prisma/client": "^6.18.0",
    "axios": "^1.12.2",
    "camaro": "^6.2.3",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "mysql": "^2.18.1",
    "node-cron": "^4.2.1",
    "nodemon": "^3.1.10",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "puppeteer": "^24.26.0",
    "puppeteer-extra": "^3.3.6",
    "redis": "^5.8.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.15",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-session": "^1.18.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.9.1",
    "@types/node-cron": "^3.0.11",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/passport-saml": "^1.1.7",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/validator": "^13.15.3",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "copyfiles": "^2.4.1"
  }
}
